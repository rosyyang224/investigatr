<div class="container">
  <h3>Active Officers in GCPD</h3>
  <table class="highlight responsive-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Rank</th>
        <th>Unit</th>
        <th class="center-align">Options</th>
      </tr>
    </thead>
    <tbody>
      <% @active_officers.each do |officer| %>
        <tr>
          <td><%= link_to officer.name, officer_path(officer) %></td>
          <td><%= officer.rank %></td>
          <td><%= officer.unit.name %></td>
          <td class="center-align">
            <%= link_to edit_officer_path(officer) do %>
              <i class="material-icons">edit</i>
            <% end %>
            <%= link_to officer_path(officer), method: :delete, data: { confirm: 'Are you sure you want to delete this information?' } do %>
              <i class="material-icons">delete</i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row">
    <div class="col s12 center-align">
      <%= will_paginate @active_officers, previous_label: "Previous", next_label: "Next", class: 'pagination' %>
    </div>
  </div>

  <div class="row">
    <div class="col s12 center-align">
      <%= link_to "New Officer", new_officer_path, class: 'btn waves-effect waves-light' %>
    </div>
  </div>
</div>
