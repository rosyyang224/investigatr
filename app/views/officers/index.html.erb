<div class="container">
  <h4 class="center-align red-text text-darken-2" style="margin-top: 30px;">
    Active Officers in GCPD
  </h4>

  <div class="card z-depth-2" style="border-radius: 12px; padding: 20px; margin-top: 20px;">
    <table class="highlight responsive-table centered">
      <thead class="blue-text text-darken-2">
        <tr>
          <th>Name</th>
          <th>Rank</th>
          <th>Unit</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <% @active_officers.each do |officer| %>
          <tr>
            <td><%= link_to officer.name, officer_path(officer), class: 'blue-text text-darken-2' %></td>
            <td><%= officer.rank %></td>
            <td><%= officer.unit.name %></td>
            <td>
              <%= link_to edit_officer_path(officer), class: 'btn-flat tooltipped', data: { tooltip: 'Edit' } do %>
                <i class="material-icons blue-text text-darken-2">edit</i>
              <% end %>
              <%= link_to officer_path(officer), method: :delete, data: { confirm: 'Are you sure you want to delete this information?' }, class: 'btn-flat tooltipped', data: { tooltip: 'Delete' } do %>
                <i class="material-icons red-text text-darken-2">delete</i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="section center-align" style="margin-top: 20px;">
      <%= will_paginate @active_officers, previous_label: "Previous", next_label: "Next", class: 'pagination' %>
    </div>

    <div class="divider" style="margin: 30px 0;"></div>

    <div class="center-align">
      <%= link_to "New Officer", new_officer_path, class: 'btn blue darken-2 waves-effect waves-light', style: 'border-radius: 8px;' %>
    </div>
  </div>
</div>
