<div class="container">
  <h4>Active Units in GCPD</h4>
  <table class="highlight responsive-table">
    <thead>
      <tr>
        <th>Unit</th>
        <th>Active</th>
      </tr>
    </thead>
    <tbody>
      <% if @active_units.present? %>
        <% @active_units.each do |unit| %>
          <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
            <td><%= link_to unit.name, unit_path(unit) %></td>
            <td><%= unit.active ? "Yes" : "No" %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="2">No active units at this time</td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row">
    <div class="col s12 center-align">
      <%= link_to "New Unit", new_unit_path, class: 'btn waves-effect waves-light' %>
    </div>
  </div>
</div>
